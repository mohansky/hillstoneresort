import ButtonIcon from "./ButtonIcon.astro";
import { Icon } from "astro-icon/components";
import HillStoneLogo from "./HillStoneLogo.astro";

interface FooterContact {
  icon: string;
  link: string;
  text: string;
}

interface FooterSocial {
  icon: string;
  link: string;
  text: string;
}

interface Props {
  author: any;
  footnote: string;
  copyright: string;
  links: any;
  footerContact: FooterContact[];
  footerSocials: FooterSocial[];
}

const { author, footnote, copyright, links, footerContact, footerSocials } =
  Astro.props;
