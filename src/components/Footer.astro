<footer
  class="footer sm:footer-horizontal bg-base-300 border-t-1 text-base-content items-center p-4"
>
  <aside class="grid-flow-col items-center">
    <span class="flex items-center">
      {copyright}
      <Icon name="mdi:copyright" class="w-4 h-4 mx-2" />
      {new Date().getFullYear()}
    </span>
  </aside>
  <aside
    class="grid-flow-col md:place-self-center md:justify-self-center items-center"
  >
    <div class="hidden lg:block">
      <Heading size="md" class="text-center">The Hill Stone Resort</Heading>
    </div>
  </aside>
  <nav class="grid-flow-col gap-4 md:place-self-center md:justify-self-end">
    {
      footerSocials.map((item) => (
        <a
          href={item.link}
          target="_blank"
          rel="noopener noreferrer"
          title={`Visit us on ${item.text}`}
        >
          <button class="group px-0">
            <Icon
              name={item.icon}
              class="w-6 h-6 text-neutral dark:text-neutral-content group-hover:opacity-50 transition delay-150 duration-300 ease-in-out"
            />
            <span class="sr-only">{item.text}</span>
          </button>
        </a>
      ))
    }
  </nav>
</footer>
