  <nav>
    <Heading size="sm">Contact</Heading>
    {
      footerContact.map((item) => (
        <ButtonIcon link={item.link} icon={item.icon} text={item.text} />
      ))
    }
  </nav>
  <nav>
    <Heading size="sm">Links</Heading>
    <ul class="my-3 ml-1 list-none [&>li]:mt-1 space-y-3">
      {
        links.map((link: any) => (
          <li>
            <a href={link.link}>
              <button class="link link-hover px-0 font-sans text-lg">
