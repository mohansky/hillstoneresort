---
import { Icon } from "astro-icon/components";
import Container from "./Container.astro";
import Heading from "./Heading.astro";

interface Facility {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  facilitiesTitle: string;
  facilities: Facility[];
}

const { facilitiesTitle, facilities } = Astro.props;
---

<section id="facilities">
  <Container width="marginxy">
    <Heading class="text-center mb-10" size="xxl">
      {facilitiesTitle}
    </Heading>
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
      {
        facilities.map((facility) => (
          <div class="group border-none shadow-none">
          
              <Icon
                name={facility.icon}
                class="w-12 h-12 md:w-20 md:h-20 mx-auto group-hover:scale-125 transition delay-150 duration-300 ease-in-out"
              />
              <Heading class="text-center" size="md">
                {facility.title}
              </Heading>
              <Heading class="text-center" size="xxs" fontweight="light" fontstyle="sans">
                {facility.description}
              </Heading>
          
          </div>
        ))
      }
    </div>
  </Container>
</section>
