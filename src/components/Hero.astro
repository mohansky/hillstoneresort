---
import type { OptionsCollection, OptionsSchema } from "@/content.config";
import { getCollection } from "astro:content";
import HeroSection from "@/components/sections/hero";
import { Button } from "./ui/button";
import { Heading } from "./styled/heading";

const options: OptionsCollection[] = await getCollection("options");
const optionsData: OptionsSchema = options.map(
  (item: OptionsCollection) => item.data
)[0];
---

<div class="relative h-screen w-full overflow-hidden">
  <div class="absolute bg-black opacity-20 w-full h-full top-0 left-0 z-10">
  </div>
  <media-video-controller class="absolute inset-0 w-full h-full">
    <video
      slot="media"
      src="/src/assets/hillstone-bg.mp4"
      autoplay
      loop
      muted
      class="absolute inset-0 w-full h-full object-cover"></video>
    <media-control-bar
      slot="controls"
    >
      <media-play-button></media-play-button>
      <media-mute-button></media-mute-button>
    </media-control-bar>
  </media-video-controller>

  <div
    class="relative z-10 flex flex-col justify-center items-center h-full text-center text-white px-4"
  >
    <Heading className="mb-4 drop-shadow-lg" size="lg" client:load>
      The Hill Stone Resort
    </Heading>
    <p class="text-xl md:text-xl mb-8 max-w-6xl drop-shadow-md leading-10">
      Immerse yourself in nature
    </p>
    <a href="/#book" title=" Book your stay" aria-label=" Book your stay">
      <Button variant="outline" size="lg"> Book your stay </Button>
    </a>
  </div>
</div>
